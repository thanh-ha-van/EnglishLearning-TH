<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <vn.magik.hot8.customviews.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorRobinEggBlue"
            android:gravity="center"
            android:text="@string/setting"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:font="Trebuchet.ttf" />

        <include layout="@layout/view_top_trial" />

        <include layout="@layout/item_setting_items" />

        <include layout="@layout/item_notification" />
    </LinearLayout>

</ScrollView>
