<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@color/colorRobinEggBlue"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/pg_create_plan"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="30dp"
            android:gravity="bottom"
            app:donut_text_size="30sp"
            custom:donut_circle_starting_degree="270"
            custom:donut_finished_color="@color/white"
            custom:donut_finished_stroke_width="6dp"
            custom:donut_text_color="@color/white"
            custom:donut_unfinished_color="@color/gray_2"
            custom:donut_unfinished_stroke_width="6dp" />

        <vn.magik.hot8.customviews.CustomTextView
            android:id="@+id/tv_message_create_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/doing_plan"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:font="Trebuchet.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="horizontal">

        <vn.magik.hot8.customviews.CustomTextView
            android:id="@+id/tv_choice_word"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/plate"
            android:gravity="center"
            android:text="@string/choice_word"
            android:textAllCaps="false"
            android:textColor="@color/colorRobinEggBlueDark"
            android:textSize="20sp"
            app:font="Trebuchet.ttf" />
    </LinearLayout>


</LinearLayout>