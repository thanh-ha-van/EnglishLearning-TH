<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <vn.magik.hot8.customviews.CustomTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorRobinEggBlue"
        android:gravity="center"
        android:text="@string/statistical"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:font="Trebuchet.ttf" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <include
                android:id="@+id/top_view"
                layout="@layout/view_top_summary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <include
                android:id="@+id/level_view"
                layout="@layout/view_level" />

            <include
                android:id="@+id/speed_view"
                layout="@layout/view_weak_schedules" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>

